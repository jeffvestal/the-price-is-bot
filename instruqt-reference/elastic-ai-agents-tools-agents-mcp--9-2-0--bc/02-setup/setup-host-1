# Enable OneChat Feature Flags until public release
echo "--- Enabling OneChat Feature Flags (single) and Mark Mode ðŸ¤– ðŸŒ™---"
curl -X POST "$KIBANA_URL_UI/api/kibana/settings" \
-H "Content-Type: application/json" \
-H "kbn-xsrf: true" \
-H "x-elastic-internal-origin: featureflag" \
-d '{
   "changes": {
      "agentBuilder:enabled": true,
      "theme:darkMode": true
   }
}'|jq



echo "--- Fetching Kibana Settings ---"
curl -s -X GET "$KIBANA_URL_UI/internal/kibana/settings" \
-H "x-elastic-internal-origin: featureflag" \
-H "kbn-xsrf: true"

